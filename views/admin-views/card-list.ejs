<!DOCTYPE html>
<html lang="ru">

<%- include('./partials/admin-head') %>

<body>
  <div class="position-relative bg-white d-flex p-0">

    <%- include('./partials/sidebar', {page: 'cards'}) %>

    <!-- Content Start -->
    <div class="content">

      <%- include('./partials/navbar', {title: 'Карточки товаров'}) %>

      <div class="container-fluid p-4">
        <div class="text-center mb-5 display-6">
          <a href=""><i class="fa fa-plus-circle"></i> Добавить новую карточку</a>
        </div>

        <div class="row gap-4 justify-content-center">
          <% cards.forEach(card => { %>
            <%- include('./partials/admin-card', {card}) %>
          <% }); %>
        </div>
      </div>


    </div>
    <!-- Content End -->

  </div>

  <!-- JavaScript Libraries -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../../public/js/admin/main.js"></script>
</body>

</html>
