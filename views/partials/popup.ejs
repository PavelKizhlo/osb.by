<div class="popup">
    <button class="popup__close"></button>
    <h2 class="order__title">Оставить заявку</h2>
    <form class="order__form" action="https://formspree.io/f/mjvzvnak" method="POST" id="order-form">
        <div class="input-wrapper">
            <input class="order__name" type="text" name="name" placeholder="Ваше имя" required />
        </div>
        <div class="input-wrapper">
            <input class="order__phone" type="text" name="phone" placeholder="Ваш телефон" required />
        </div>
        <input class="order__mail" type="email" name="email" placeholder="Ваш e-mail" />
        <input type="text" name="material" />
        <div class="order__wrapper">
            <div class="order__number">
                <label for="sheets">Количество листов:</label>
                <input type="number" name="number" id="sheets" value="1" min="1" max="100" />
            </div>
            <div class="order__delivery">
                <span>Способ получения:</span>
                <div class="order__delivery-item">
                    <input type="radio" id="self-deliv" name="delivery" checked />
                    <label class="order__delivery-label" for="self-deliv">Самовывоз</label>
                </div>
                <div class="order__delivery-item">
                    <input type="radio" id="our-deliv" name="delivery" />
                    <label class="order__delivery-label" for="our-deliv">Доставка</label>
                </div>
            </div>
        </div>
        <button class="button button_secondary" type="submit">Отправить</button>
    </form>
</div>
